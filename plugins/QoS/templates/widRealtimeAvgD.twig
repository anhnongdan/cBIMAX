<div class='realtime-avg-widget' data-refreshAfterXSecs="{{ refreshAfterXSecs }}" data-last-minutes="{{ lastMinutes }}" >
	<div class='realtime-avg-counter' title="{{ avg_speed }}">
		<div>{{ avg_speed }}</div> <span>{{ unit }}bps</span>
	</div>
	<br/>

	<div class='simple-realtime-elaboration'>
        {{ 'QoS_RealTimeMessage'|translate }}
		<span class="simple-realtime-metric" data-metric="minutes">{{ 'QoS_RealTimeInLastMessage'|translate(lastMinutes) | raw }}</span>

	</div>
</div>
<script type="text/javascript">$(document).ready(function () {require('piwik/QoS').initRealtimeAvgWidget();});</script>

